doctype html
html
  head
    meta(name='viewport', content='width=device-width')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title CSE Repo
    style.
      body {
        background-color: #000;
        font-family: Arial, sans-serif;
        font-size: 16px;
        line-height: 1.5;
        color:#000;
      }
      a{
        text-decoration: none;
      }
      nav{
        width:100%;
        height: 60px;
        background-color: #161b22;
      }
      h1,h3 {
        font-weight: bold;
        text-align: center;
      }
      p {
        margin-bottom: 1em;
      }
      .from{
        font-size: 22px;
        font-weight: bold;
      }
      .message{
        font-size: 18px;
        font-weight: bold;
      }
  body
    nav
      a(href="https://cse-repo.vercel.app/") 
          h1 CSE Repo 
              img(src="https://cse-repo.vercel.app/favicon/favicon-32x32.png" alt="CSE Repo Logo")
    h3 #{subject}
    p.from #{name}
    p.message Message: #{message}
